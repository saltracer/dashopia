<%- model_class = DependantTask -%>
<div class="page-header">
  <h1><%=t '.title', :default => DependantTask %></h1>
</div>

<div class="fieldset">
  <dl>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dependant_tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dependant_task_path(@dependant_task), :class => 'btn btn-default' %>
