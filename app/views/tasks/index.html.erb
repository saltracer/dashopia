<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Location</th>
      <th>Start at</th>
      <th>Duration</th>
      <th>Finish at</th>
      <th>Due at</th>
      <th>Due event</th>
      <th>Reminder at</th>
      <th>Reminder type</th>
      <th>Occurance</th>
      <th>Occurance deleted</th>
      <th>Parent</th>
      <th>Collapse</th>
      <th>Child duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.user %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.location_id %></td>
        <td><%= task.start_at %></td>
        <td><%= task.duration %></td>
        <td><%= task.finish_at %></td>
        <td><%= task.due_at %></td>
        <td><%= task.due_event %></td>
        <td><%= task.reminder_at %></td>
        <td><%= task.reminder_type %></td>
        <td><%= task.occurance_id %></td>
        <td><%= task.occurance_deleted %></td>
        <td><%= task.parent_id %></td>
        <td><%= task.collapse %></td>
        <td><%= task.child_duration %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

