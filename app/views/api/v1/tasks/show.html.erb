<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => Task %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @task.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @task.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:priority) %></dt>
      <dd><pre class="prettyprint"><%= @task.priority %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location_id) %></dt>
      <dd><pre class="prettyprint"><%= @task.location_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_at) %></dt>
      <dd><pre class="prettyprint"><%= @task.start_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:duration) %></dt>
      <dd><pre class="prettyprint"><%= @task.duration %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:finish_at) %></dt>
      <dd><pre class="prettyprint"><%= @task.finish_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:due_at) %></dt>
      <dd><pre class="prettyprint"><%= @task.due_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:due_event) %></dt>
      <dd><pre class="prettyprint"><%= @task.due_event %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reminder_at) %></dt>
      <dd><pre class="prettyprint"><%= @task.reminder_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reminder_type) %></dt>
      <dd><pre class="prettyprint"><%= @task.reminder_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:occurance_id) %></dt>
      <dd><pre class="prettyprint"><%= @task.occurance_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:occurance_deleted) %></dt>
      <dd><pre class="prettyprint"><%= @task.occurance_deleted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:parent_id) %></dt>
      <dd><pre class="prettyprint"><%= @task.parent_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:collapse) %></dt>
      <dd><pre class="prettyprint"><%= @task.collapse %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:child_duration) %></dt>
      <dd><pre class="prettyprint"><%= @task.child_duration %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

