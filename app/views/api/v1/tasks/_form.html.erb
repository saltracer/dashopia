<%= form_for @task, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :priority, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :location_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :start_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :duration, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :finish_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :finish_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :due_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_event, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :due_event, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reminder_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :reminder_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reminder_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :reminder_type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occurance_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :occurance_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occurance_deleted, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :occurance_deleted, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :parent_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :parent_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :collapse, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :collapse, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :child_duration, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :child_duration, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  tasks_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
